<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btn_start"
        android:text="Start Simple Service"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:onClick="onClickStart"/>

    <Button
        android:id="@+id/btn_stop"
        android:text="Stop Simple Service"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClickStop"/>

    <Button
        android:id="@+id/btn_start_intent_service"
        android:text="Start Intent Service"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:onClick="onClickStartIntent"/>

    <Button
        android:id="@+id/btn_stop_stop_intent_service"
        android:text="Stop Intent Service"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClickStopIntent"/>

    <Button
        android:id="@+id/btn_open_player"
        android:text="Start Player"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="onClickOpenPlayer"/>

</LinearLayout>